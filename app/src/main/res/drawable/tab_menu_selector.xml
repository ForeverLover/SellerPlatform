<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape >
                    <solid android:color="@color/tab_colo_checked" />
                </shape>
            </item>
            <item android:bottom="@dimen/indicator_height">
                <shape>
                    <solid android:color="@color/white" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_selected="true">
        <layer-list>
            <item>
                <shape >
                    <solid android:color="@color/tab_colo_checked" />
                </shape>
            </item>
            <item android:bottom="@dimen/indicator_height">
                <shape>
                    <solid android:color="@color/white" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <shape>
            <solid android:color="@color/white" />
        </shape>
    </item>
</selector>
