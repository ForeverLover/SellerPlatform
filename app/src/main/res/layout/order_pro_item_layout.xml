<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_toLeftOf="@+id/order_item_product_amount"
            android:layout_alignParentLeft="true"
            android:id="@+id/order_item_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_seventeen"
            android:layout_marginRight="@dimen/dp_five"
            android:textColor="@color/black"
            android:text="卡拉雞翅煲 不加洋蔥"/>
        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/order_item_product_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_seventeen"
            android:textColor="@color/black"
            android:text="X2"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_fifteen"
        android:layout_marginLeft="@dimen/dp_twenty"
        android:layout_marginRight="@dimen/dp_twenty"
        android:lineSpacingMultiplier="1.1"
        android:layout_marginTop="@dimen/dp_two"
        android:text="少冰少糖 +珍珠"
        android:id="@+id/order_item_proInfo"/>


</LinearLayout>
