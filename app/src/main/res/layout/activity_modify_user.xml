<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none"
    android:background="@drawable/page_bg">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dp_thirty">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/account_title"
            android:textSize="@dimen/sp_twenty" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_twenty"
            android:paddingRight="@dimen/dp_twenty"
            android:orientation="vertical">
            <LinearLayout
                android:layout_marginTop="@dimen/dp_fifteen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="@dimen/dp_zero"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textSize="@dimen/sp_sixteen"
                    android:text="@string/merchant_id"/>
                <TextView
                    android:gravity="center_horizontal"
                    android:id="@+id/user_merchantId_tv"
                    android:layout_width="@dimen/dp_zero"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:textSize="@dimen/sp_sixteen"
                    android:text=""/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/dp_fifteen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="@dimen/dp_zero"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textSize="@dimen/sp_sixteen"
                    android:text="@string/account_no"/>
                <TextView
                    android:gravity="center_horizontal"
                    android:id="@+id/user_account_tv"
                    android:layout_width="@dimen/dp_zero"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:textSize="@dimen/sp_sixteen"
                    android:text=""/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/dp_fifteen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="@dimen/dp_zero"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textSize="@dimen/sp_sixteen"
                    android:text="@string/account_pwd"/>
                <RelativeLayout
                    android:id="@+id/user_update_btn"
                    android:layout_width="@dimen/dp_zero"
                    android:layout_height="wrap_content"
                    android:layout_weight="3">
                    <TextView
                        android:background="@drawable/solid_rounder_box"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_sixteen"
                        android:paddingLeft="@dimen/dp_fifteen"
                        android:paddingBottom="@dimen/dp_two"
                        android:paddingTop="@dimen/dp_two"
                        android:paddingRight="@dimen/dp_fifteen"
                        android:text="@string/account_update_pwd"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/dp_fifteen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="@dimen/dp_zero"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textSize="@dimen/sp_sixteen"
                    android:text="@string/account_phone"/>
                <TextView
                    android:gravity="center_horizontal"
                    android:id="@+id/user_phone_tv"
                    android:layout_width="@dimen/dp_zero"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:textSize="@dimen/sp_sixteen"
                    android:text=""/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_marginTop="@dimen/dp_sixty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/account_op_pwd"
            android:textSize="@dimen/sp_seventeen" />
        <LinearLayout
            android:layout_marginTop="@dimen/dp_five"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:id="@+id/user_pwd_et"
                android:padding="@dimen/dp_five"
                android:layout_gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/dp_twenty"
                android:background="@color/et_bg"
                android:textSize="@dimen/sp_sixteen"
                android:text="Sa14b283kk"

               android:layout_marginLeft="@dimen/dp_fifty"
                android:layout_marginRight="@dimen/dp_fifty"/>
            <TextView
                android:layout_marginTop="@dimen/dp_fifteen"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/dp_fifty"
                android:layout_marginRight="@dimen/dp_fifty"
                android:text="@string/account_tip_one"
                android:textSize="@dimen/sp_forteen"
                android:lineSpacingExtra="@dimen/dp_one"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="@dimen/dp_five"
                android:layout_width="wrap_content"
                android:text="@string/account_tip_two"
                android:layout_gravity="center_horizontal"
                android:lineSpacingMultiplier="1.2"
                android:textSize="@dimen/sp_forteen"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_thirty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/user_cancel_btn"
                android:textColor="@color/tab_colo_checked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/account_cancel"
                android:paddingLeft="@dimen/dp_twenty"
                android:paddingRight="@dimen/dp_twenty"
                android:paddingBottom="@dimen/dp_five"
                android:paddingTop="@dimen/dp_five"
                android:background="@color/white"/>
            <TextView
                android:id="@+id/user_ensure_btn"
                android:layout_marginLeft="@dimen/dp_five"
                android:background="@color/tab_colo_checked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/account_ensure"
                android:paddingLeft="@dimen/dp_twenty"
                android:paddingRight="@dimen/dp_twenty"
                android:paddingBottom="@dimen/dp_five"
                android:paddingTop="@dimen/dp_five"
                android:textColor="@color/white"/>
        </LinearLayout>

    </LinearLayout>

</ScrollView>
