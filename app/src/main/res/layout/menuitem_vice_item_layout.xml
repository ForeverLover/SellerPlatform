<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/half_white">
    <TextView
        android:padding="@dimen/dp_five"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_ten"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_eighteen"
        android:id="@+id/menuitem_vice_name"/>
    <ImageView
        android:id="@+id/menuitem_vice_modify"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/modify_category_img"/>

</RelativeLayout>
