<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/page_bg"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_seventy">

        <RelativeLayout
            android:id="@+id/merchant_title_layout"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <ImageView
                android:id="@+id/merchant_img_iv"
                android:layout_width="@dimen/dp_seventy_three"
                android:layout_height="@dimen/dp_seventy_three"
                android:layout_marginBottom="@dimen/dp_forty"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_forty_two"
                android:paddingRight="@dimen/dp_twenty">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/settings_head_bg"
                    android:padding="@dimen/dp_three">

                    <com.templar.sellerplatform.widget.CornerImageView
                        android:id="@+id/merchant_logo_iv"
                        android:layout_width="@dimen/dp_eighty"
                        android:layout_height="@dimen/dp_eighty"
                        android:scaleType="centerCrop"

                        android:src="@mipmap/merchant_img" />
                </RelativeLayout>


                <TextView

                    android:id="@+id/merchant_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="@dimen/dp_ten"
                    android:textColor="#0c0c0b"
                    android:textSize="@dimen/sp_twenty_two" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_twenty"
            android:layout_marginRight="@dimen/dp_twenty"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/settings_modify_layout"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_thirty"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/dp_three"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/settings_alter"
                    android:textColor="#cdcdcd"
                    android:textSize="@dimen/sp_eighteen" />

                <ImageView
                    android:layout_width="@dimen/dp_ten"
                    android:layout_height="@dimen/dp_fifteen"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_five"
                    android:scaleType="fitXY"
                    android:src="@mipmap/user_right_arrow" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_ten"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/dp_zero"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/settings_id"
                    android:textColor="@color/merchant_label"
                    android:textSize="@dimen/sp_fifteen"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/settings_id_tv"
                    android:layout_width="@dimen/dp_zero"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textColor="@color/merchant_text"
                    android:textSize="@dimen/sp_fifteen" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_ten"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/dp_zero"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/settings_addr"
                    android:textColor="@color/merchant_label"
                    android:textSize="@dimen/sp_fifteen"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/settings_addr_tv"
                    android:layout_width="@dimen/dp_zero"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textColor="@color/merchant_text"
                    android:textSize="@dimen/sp_fifteen" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_ten"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/dp_zero"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/settings_link"
                    android:textColor="@color/merchant_label"
                    android:textSize="@dimen/sp_fifteen"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/settings_link_tv"
                    android:layout_width="@dimen/dp_zero"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textColor="@color/merchant_text"
                    android:textSize="@dimen/sp_fifteen" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_ten"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/dp_zero"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/settings_onTime"
                    android:textColor="@color/merchant_label"
                    android:textSize="@dimen/sp_fifteen"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/settings_ontime_tv"
                    android:layout_width="@dimen/dp_zero"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textColor="@color/merchant_text"
                    android:textSize="@dimen/sp_fifteen" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_ten"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/dp_zero"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/settings_web"
                    android:textColor="@color/merchant_label"
                    android:textSize="@dimen/sp_fifteen"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/settings_web_tv"
                    android:layout_width="@dimen/dp_zero"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textColor="@color/merchant_text"
                    android:textSize="@dimen/sp_fifteen" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_ten"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/dp_zero"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/settings_remark"
                    android:textColor="@color/merchant_label"
                    android:textSize="@dimen/sp_fifteen"
                    android:textStyle="bold" />

                <TextView

                    android:id="@+id/settings_remark_tv"
                    android:layout_width="@dimen/dp_zero"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textColor="@color/merchant_text"
                    android:textSize="@dimen/sp_fifteen" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_ten"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/dp_zero"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/settings_card"
                    android:textColor="@color/merchant_label"
                    android:textSize="@dimen/sp_fifteen"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/settings_card_tv"
                    android:layout_width="@dimen/dp_zero"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textColor="@color/merchant_text"
                    android:textSize="@dimen/sp_fifteen" />
            </LinearLayout>



        </LinearLayout>
        <View
            android:layout_marginTop="@dimen/dp_five"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_one"
            android:background="#20000000"/>

        <LinearLayout
            android:id="@+id/settings_account_opLaout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_ten"

            android:background="@drawable/btn_comment_bg"
            android:orientation="horizontal"
            android:padding="@dimen/dp_five">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/settings_account_alter"
                android:textColor="#cdcdcd"
                android:textSize="@dimen/sp_eighteen" />

            <ImageView
                android:layout_width="@dimen/dp_ten"
                android:layout_height="@dimen/dp_fifteen"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_five"
                android:scaleType="fitXY"
                android:src="@mipmap/user_right_arrow" />
        </LinearLayout>
    </LinearLayout>


</ScrollView>
